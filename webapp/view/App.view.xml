<mvc:View displayBlock="true" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" xmlns:layout="sap.ui.layout" xmlns:semantic="sap.f.semantic" controllerName="opensap.myapp.controller.App">
	<SplitApp id="SplitAppDemo" initialDetail="detail" initialMaster="master" orientationChange="onOrientationChange">
		<masterPages>
			<!--<l:Splitter>-->
			<Page id="master" title="Master 1">
				<content>
					<layout:VerticalLayout>
						<GenericTile class="tileLayout sapUiSmallMargin" header="{socialMedia>/data/name/first} {socialMedia>/data/name/last}" subheader="Formula 1"
							backgroundImage="https://www.gstatic.com/webp/gallery3/2.png" press="onProfile">
							<TileContent></TileContent>
						</GenericTile>
						<SlideTile transitionTime="1000" displayTime="2500" class="sapUiSmallMargin">
							<GenericTile backgroundImage="https://www.gstatic.com/webp/gallery3/3.png" press="onFriends">
								<TileContent footer="Felipe Massa">
									<NewsContent contentText="Formula 1" subheader="Ferrari"/>
								</TileContent>
							</GenericTile>
							<GenericTile backgroundImage="https://www.gstatic.com/webp/gallery3/1.png" press="onFriends">
								<TileContent footer="Jenson Button">
									<NewsContent contentText="Formula 1" subheader="McLaren"/>
								</TileContent>
							</GenericTile>
						</SlideTile>
						<SlideTile transitionTime="1000" displayTime="2500" class="sapUiSmallMargin">
							<GenericTile backgroundImage="https://www.gstatic.com/webp/gallery3/4.png" press="onGroups">
								<TileContent footer="Ferrai">
									<NewsContent contentText="Prancing Horse" subheader="Ferrari"/>
								</TileContent>
							</GenericTile>
							<GenericTile backgroundImage="https://imgs.xkcd.com/comics/online_communities.png" press="onGroups">
								<TileContent footer="McLaren">
									<NewsContent contentText="Silver Arrows" subheader="McLaren"/>
								</TileContent>
							</GenericTile>
						</SlideTile>
					</layout:VerticalLayout>
				</content>
			</Page>
			<!--<layoutData><l:SplitterLayoutData size="auto" /></layoutData>-->
			<!--</l:Splitter>-->
		</masterPages>
		<detailPages>
			<Page id="profile" title="Profile">
				<content>
						<f:SimpleForm
						editable="false"
						layout="ResponsiveGridLayout"
						labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4"
						columnsL="1" columnsM="1">
						<f:content>
							<Label text="" />
							<Image src="{socialMedia>/data/picture/large}"/>
							<Label text="{i18n>formName}" />
							<Text text="{socialMedia>/data/name/title} {socialMedia>/data/name/first} {socialMedia>/data/name/last}" />
							<Label text="{i18n>emailAddress}" />
							<Text text="{socialMedia>/data/email}" />
							<Label text="{i18n>formPhoneHome}" />
							<Text text="{socialMedia>/data/phone}" />
						</f:content>
					</f:SimpleForm>       
				</content>
			</Page>
			<semantic:SemanticPage id="friends" toggleHeaderOnTitleClick="false">
				<semantic:content>
					<Table id="table" width="auto" items="{socialMedia>/data/friends}" growing="true" growingScrollToLoad="true"
						updateFinished="onUpdateFinished">
						<headerToolbar>
							<Toolbar>
								<Title id="tableHeader" text="{socialMedia>/data/name/first}'s Friends"/>
								<ToolbarSpacer/>
								<SearchField id="searchField" search="onSearch" width="50%"></SearchField>
								<Button icon="sap-icon://add" press="onAdd"></Button>
							</Toolbar>
						</headerToolbar>
						<columns>
							<Column id="nameColumn">
								<Text text="Name" id="nameColumnTitle"/>
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="Dob"></Text>
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="Email Address"></Text>
							</Column>
							<Column id="unitNumberColumn">
								<Text text="Age" id="unitNumberColumnTitle"/>
							</Column>
							<Column id="imageColumn" hAlign="End">
								<Text text="" id="imageColumnTitle"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem type="Navigation" press="onPress">
								<cells>
									<ObjectIdentifier title="{socialMedia>name/first} {socialMedia>name/last}"/>
									<ObjectIdentifier title="{socialMedia>dob/date}"/>
									<Link text="{socialMedia>email}" href="{socialMedia>email}" target="_blank"/>
									<ObjectNumber number="{socialMedia>dob/age}"/>
									<Image src="{socialMedia>picture/thumbnail}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</semantic:content>
				<semantic:sendEmailAction>
					<semantic:SendEmailAction id="shareEmail" press="onShareEmailPress"/>
				</semantic:sendEmailAction>
			</semantic:SemanticPage>
			<!--<Page id="friends" title="Friends">
				<content>
					<Button text="Back" press="onMaster" class="sapUiHideOnDesktop sapUiHideOnTablet" width="100%"></Button>
					<Panel expandable="true" expanded="false" headerText="Felipe Massa" width="auto">
